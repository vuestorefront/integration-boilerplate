{
  "compilerOptions": {
    "outDir": "./lib",
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "ES2015",
    "moduleResolution": "node",
    "importHelpers": true,
    "noEmitHelpers": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "lib": ["ES2020", "dom"],
    "strict": false,
    "preserveSymlinks": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.mock.ts"]
}
